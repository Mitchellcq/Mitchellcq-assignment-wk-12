<div id="wrapper">

  <h1 class="title">Gun Burger!</h1>
  <p class="title"><em>A taste of Freedom</em></p>

  <div class="d-flex justify-content-center">
    <img src="https://i2.wp.com/freepngimages.com/wp-content/uploads/2016/11/bacon-burger.png?w=350"
      class="mx-auto d-block" alt="burger">
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <h3>Aimed and ready!</h3>
        <ul>
          {{#each burgers}}
          {{#unless fired}}
          {{> burgers/burger-block fired=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm">
        <h2>Lock and Load!</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Your Weapon of choice:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit">Chamber the Cartridge!</button>
        </form>
      </div>
      <div class="col-sm">
        <h2>Fired!</h2>
        <ul>
          {{#each burgers}}
          {{#if fired}}
          {{> burgers/burger-block fired=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>